@page
@model IAMS.Web.Pages.Country.CreateModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Create Country";
}
<p>Enter a country name:</p>

<form method="post">
@*     Country Name:
    <input asp-for="Country!.CountryName" />
    <input type="submit" /> *@


    <div class="col-md-6 offset-md-3">
        <form method="post">
            <div class="form-floating mb-3">
                <input class="form-control" asp-for="Country!.CountryName">
                <label asp-for="Country!.CountryName"></label>
                <span class="text-danger field-validation-valid" asp-validation-for="Country!.CountryName"></span>
            </div>
            <div class="form-floating mb-3">
                <input class="form-control" asp-for="Country!.CountryCode">
                <label asp-for="Country!.CountryCode"></label>
                <span class="text-danger field-validation-valid" asp-validation-for="Country!.CountryCode"></span>
            </div>
            <button type="submit" class="w-100 btn btn-lg btn-primary">Submit</button>
          
        </form>
    </div>
</form>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}